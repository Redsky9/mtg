<div class="card-item">
    <section class="card-header">
        <p><%= card.name %></p>
    </section>
    <section class="card-body">
        <div class="card-img">
            <img src="<%= card.editions[0].image_url %>" alt="<%= card.name %>">
        </div>
        <div class="card-link">
            <a href="#">Read more</a>
        </div>
    </section>
</div>